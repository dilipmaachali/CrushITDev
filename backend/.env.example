# MongoDB Environment Variables Template
# Copy this to .env file and update with your credentials

# ============ MongoDB Configuration ============

# Local MongoDB Connection
MONGODB_URI=mongodb://localhost:27017

# Alternative: MongoDB Atlas (Cloud) Connection
# MONGODB_URI=mongodb+srv://username:password@cluster-name.mongodb.net/crushit?retryWrites=true&w=majority

# Database Name
DATABASE_NAME=crushit

# ============ Server Configuration ============

# Port for backend server
PORT=4000

# Environment (development, staging, production)
NODE_ENV=development

# JWT Secret for authentication
JWT_SECRET=your-secret-key-change-in-production

# ============ Payment Configuration (Razorpay) ============

RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ============ Email Configuration ============

# For sending notifications and emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@crushit.com

# ============ Google Maps Configuration ============

GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============ AWS S3 Configuration (for image uploads) ============

AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=ap-south-1
AWS_S3_BUCKET=crushit-assets

# ============ Logging ============

LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# ============ CORS Configuration ============

CORS_ORIGIN=http://localhost:3000,exp://localhost:19000

# ============ Session Configuration ============

SESSION_SECRET=your-session-secret-key
